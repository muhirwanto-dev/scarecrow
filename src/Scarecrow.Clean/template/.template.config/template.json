{
  "$schema": "http://json.schemastore.org/template",
  "author": "muhirwanto.dev",
  "identity": "Scarecrow.Clean",
  "name": "Scarecrow Clean Architecture",
  "description": "Clean Architecture project template for .NET 9 and .NET 10, providing Domain, Application, and Infrastructure layers.",
  "shortName": "scarecrow-clean",
  "sourceName": "Scarecrow",
  "tags": {
    "language": "C#",
    "type": "project",
    "architecture": "Clean Architecture",
    "style": "DDD",
    "framework": ".NET"
  },
  "preferNameDirectory": true,
  "sources": [
    {
      "source": "./",
	  "target": "./",
      "exclude": [
        "**/.template.config/**/*",
        "**/.vs/**/*",
        "**/.git/**/*",
        "**/.gitignore",
        "**/bin/**/*",
        "**/obj/**/*",
        "**/*.user",
        "**/*.suo"
      ]
    }
  ],
  "symbols": {
    "framework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        { "choice": "net9.0" },
        { "choice": "net10.0" }
      ],
      "defaultValue": "net9.0"
    }
  }
}