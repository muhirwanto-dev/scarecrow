<Project Sdk="Microsoft.NET.Sdk">

  <!-- ========================= -->
  <!-- Template-specific config -->
  <!-- ========================= -->
  <PropertyGroup>
    <PackageId>Scarecrow.Clean</PackageId>
    <PackageVersion>1.1.0</PackageVersion>
    <PackageTags>dotnet;template;clean-architecture;ddd;scarecrow</PackageTags>
    <PackageType>Template</PackageType>

    <Title>Scarecrow Clean Architecture Template</Title>
    <Description>
Scarecrow.Clean is a Clean Architecture project template for .NET 9 and .NET 10, providing Domain, Application, and Infrastructure layers.
    </Description>
    <PackageReadmeFile>docs\Scarecrow.Clean.md</PackageReadmeFile>

    <!-- Only needed for packing the template itself -->
    <TargetFramework>net10.0</TargetFramework>

    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>template</ContentTargetFolders>

    <NoDefaultExcludes>true</NoDefaultExcludes>
    <LocalizeTemplates>false</LocalizeTemplates>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TemplateEngine.Tasks"
                      Version="*"
                      PrivateAssets="all"
                      IsImplicitlyDefined="true" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\docs\Scarecrow.Clean.md" Pack="true" PackagePath="docs" />
  </ItemGroup>

  <!-- ================= -->
  <!-- Template content  -->
  <!-- ================= -->
  <ItemGroup>
    <!-- All files under content/ become the template -->
    <Content Include="template/**"
             Exclude="template/**/bin/**;template/**/obj/**" />

    <!-- Ensure no compilation happens -->
    <Compile Remove="**/*" />
  </ItemGroup>
  
</Project>
