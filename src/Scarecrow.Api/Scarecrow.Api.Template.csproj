<Project Sdk="Microsoft.NET.Sdk">

  <!-- ========================= -->
  <!-- Template-specific config -->
  <!-- ========================= -->
  <PropertyGroup>
    <PackageId>Scarecrow.Api</PackageId>
    <PackageVersion>1.2.0</PackageVersion>
    <PackageTags>dotnet;template;webapi;api;scarecrow</PackageTags>
    <PackageType>Template</PackageType>

    <Title>Scarecrow Web API Template</Title>
    <Description>
Scarecrow.Api is a Web API project template for .NET 10, providing configuration for Routing Convention, Api Versioning, Exception Middleware, and Http Request Middleware.
    </Description>
    <PackageReadmeFile>docs\Scarecrow.Api.md</PackageReadmeFile>

    <!-- Only needed for packing the template itself -->
    <TargetFramework>net10.0</TargetFramework>

    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>template</ContentTargetFolders>

    <NoDefaultExcludes>true</NoDefaultExcludes>
    <LocalizeTemplates>false</LocalizeTemplates>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TemplateEngine.Tasks"
                      Version="*"
                      PrivateAssets="all"
                      IsImplicitlyDefined="true" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\docs\Scarecrow.Api.md" Pack="true" PackagePath="docs" />
  </ItemGroup>

  <!-- ================= -->
  <!-- Template content  -->
  <!-- ================= -->
  <ItemGroup>
    <!-- All files under content/ become the template -->
    <Content Include="template/**"
             Exclude="template/**/bin/**;template/**/obj/**" />

    <!-- Ensure no compilation happens -->
    <Compile Remove="**/*" />
  </ItemGroup>

</Project>
