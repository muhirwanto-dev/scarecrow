{
  "ConnectionStrings": {
    "SqlServerConnection": "Server=MY_SQLEXPRESS;Database=MY_DB;User Id=MY_USER;Password=MY_PASSWORD;Trust Server Certificate=True;Connection Timeout=30;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\logs\\Scarecrow.Api\\log-.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 51200000,
          "retainedFileCountLimit": 10,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [Scarecrow API][{Level}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
